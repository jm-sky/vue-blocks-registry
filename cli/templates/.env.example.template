# API Base URL for backend services
VITE_API_BASE_URL=http://localhost:3000/api

# API Proxy URL (used by Vite dev server to proxy /api requests)
# This is useful for avoiding CORS issues during development
VITE_API_PROXY_URL=http://localhost:8000

# App Configuration
VITE_APP_ID=my-app
VITE_APP_NAME=My App
VITE_APP_DESCRIPTION=My application description

# Internationalization
VITE_DEFAULT_LOCALE=en
VITE_FALLBACK_LOCALE=en

# Development - Default User Credentials (for login form auto-fill in development)
# Leave empty in production!
VITE_DEFAULT_USER_EMAIL=
VITE_DEFAULT_USER_PASSWORD=

